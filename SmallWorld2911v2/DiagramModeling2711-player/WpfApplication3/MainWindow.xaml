<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game" Height="386" Width="482"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Loaded_Window">
    <DockPanel>
        <Grid  DockPanel.Dock="Bottom" Height="158" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="147*"/>
                <ColumnDefinition Width="164*"/>
                <ColumnDefinition Width="163*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Player1" HorizontalAlignment="Left"  Grid.Column="0" Height="29" Margin="10,16,0,0" VerticalAlignment="Top" Width="48"/>
            <Button Content="Tour" HorizontalAlignment="Left" Margin="10,30,0,0" Grid.Column="2" VerticalAlignment="Top" Width="144" Height="20"/>
            <Label Content="Player2" HorizontalAlignment="Left"  Grid.Column="1" Height="29" Margin="10,10,0,0" VerticalAlignment="Top" Width="48" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="nb points" HorizontalAlignment="Left"  Grid.Column="1" Height="29" Margin="10,75,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="nb unités restantes" HorizontalAlignment="Left"  Grid.Column="1" Height="29" Margin="10,41,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="nb points" HorizontalAlignment="Left"  Grid.Column="0" Height="29" Margin="10,75,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="nb unités restantes" HorizontalAlignment="Left"  Grid.Column="0" Height="29" Margin="10,41,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="2.414,0.717"/>
        </Grid>
        <Grid  DockPanel.Dock="Top" >
            <TextBlock x:Name="mapText" 
			Width="274" Height="24" Margin="124,4,0,0" 
			HorizontalAlignment="Left" VerticalAlignment="Top" 
			Text="Map is mouse-draggable, hexes are clickable" 
                   />
            <Border BorderBrush="Black" BorderThickness="1" 
			Grid.Column="1" Height="18" HorizontalAlignment="Left" 
			Margin="124,4,0,0" x:Name="border2" VerticalAlignment="Top" Width="281" />
        </Grid>
        <Grid Margin="0,-1,0,26" >

            <ScrollViewer x:Name="mapScroller" 
			HorizontalScrollBarVisibility="Auto"
			VerticalAlignment="top"  Width="700" Height="500" 
			 Margin="0,0,-560,-320" HorizontalAlignment="Left"  >
                <Canvas x:Name="mapCanvas"  Width="1100" Height="1000" />
            </ScrollViewer>
        </Grid>


    </DockPanel>
</Window>

<Window x:Class="WPFSmallWorld.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:WPFSmallWorld"
        Title="Small World" Height="500" Width="500"
        WindowStartupLocation="CenterScreen" WindowState="Maximized" Loaded="Loaded_Window">
    <DockPanel>


        <Grid  DockPanel.Dock="Bottom" Height="158" >

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="181*"/>
                <ColumnDefinition Width="184*"/>
                <ColumnDefinition Width="109*"/>
            </Grid.ColumnDefinitions>
            <Label Content="Nom : " HorizontalAlignment="Left"  Grid.Column="0" Height="29" Margin="10,16,0,0" VerticalAlignment="Top" Width="48"/>
            <Label Content="Nom : " HorizontalAlignment="Left"  Grid.Column="1" Height="29" Margin="10,16,0,0" VerticalAlignment="Top" Width="48" RenderTransformOrigin="2.414,0.717"/>

            <Label Content="nb unités restantes" HorizontalAlignment="Left"  Grid.Column="1" Height="29" Margin="10,36,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="" x:Name="NbUnite2" BorderThickness="2" HorizontalAlignment="Left"  Grid.Column="1" Height="29" Margin="129,36,0,0" VerticalAlignment="Top" Width="40" RenderTransformOrigin="2.414,0.717"/>


            <Label Content="nb unités restantes" HorizontalAlignment="Left"  Grid.Column="0" Height="29" Margin="10,41,0,0" VerticalAlignment="Top" Width="114" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="" Name="NbUnite1" BorderThickness="2" HorizontalAlignment="Left"  Grid.Column="0" Height="29" Margin="129,36,0,0" VerticalAlignment="Top" Width="42" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="" x:Name="Name2" BorderThickness="2" HorizontalAlignment="Left"  Grid.Column="0" Height="29" Margin="95,17,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="2.414,0.717"/>
            <Label Content="" x:Name="Name1" BorderThickness="2" HorizontalAlignment="Left"  Grid.Column="1" Height="28" Margin="76,17,0,0" VerticalAlignment="Top" Width="66" RenderTransformOrigin="2.414,0.717"/>

            <Button Content="End turn " HorizontalAlignment="Left" Margin="19,79,0,0" Grid.Column="2" VerticalAlignment="Top" Width="66" Height="20" Click="Button_Click"/>
            <Button Content="Menu" HorizontalAlignment="Left" Margin="19,45,0,0" Grid.Column="2" VerticalAlignment="Top" Width="66" Height="20" Click="Button_Click1"/>
        </Grid>
        <Grid  DockPanel.Dock="Top" >

        </Grid>

        <!--
        <local:HexagonGrid Name="myGrid" Margin="0,-1,0,0" Width="600"
                           RenderTransformOrigin="0.637,0.429">
        -->


        <ScrollViewer x:Name="mapScroller" 
			HorizontalScrollBarVisibility="Auto"
			VerticalAlignment="top"  Width="848" Height="426" 
			 Margin="0,10,-403,-125" HorizontalAlignment="Left" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"  >
            <ScrollViewer.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.245"/>
                    <TranslateTransform/>
                </TransformGroup>
            </ScrollViewer.RenderTransform>

            <Grid Name="myGrid" Margin="0,-1,0,0" Width="480"
                           RenderTransformOrigin="0.637,0.429">
                <Polygon Name="selectionPolygon" Stroke="blue" Panel.ZIndex="333" Visibility="collapsed"/>
            </Grid>

        </ScrollViewer>


    </DockPanel>




</Window>



